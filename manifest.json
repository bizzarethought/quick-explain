{
  "manifest_version": 3,
  "name": "QuickExplain",
  "description": "Shows quick explanations for highlighted text with customizable source selection and tone options.",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
